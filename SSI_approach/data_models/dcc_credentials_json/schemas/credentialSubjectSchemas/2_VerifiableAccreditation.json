{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id":"https://raw.githubusercontent.com/desdotl/schemas/master/dcc_schemas/2_VerifiableAccreditationSchema/schema.json",
  "title": "DCC Verifiable Accreditation Record",
  "description": "Schema of a DCC Verifiable Accreditation Record",
  "definitions": {
    "credentialSubject": {
      "type": "object",
      "required": ["id,authorizationClaims"],
      "properties": {
        "id": {
          "description": "Refer to the subject DID",
          "type": "string",
          "format": "uri",
          "default": "did:dcc:0xe88357BF682d965a38CE41d00085C05412d25936",
          "pattern": "^(did:dcc:0x)([a-zA-Z0-9]{40})$"
        },
        "authorizationClaims": {
          "description": "Defines a list of claims that define/determine the authorization of an Issuer to issue certain types of VCs",
          "type": "object",
          "required": ["credentialSchemaIds,accreditationScopes"],
          "properties": {
            "credentialSchemaIds": {
              "description": "A list of Schemas, registered in  Schemas Registry, which the accredited organisation is allowed to issue, as per their accreditation.",
              "type": "array",
              "minItems":1,
              "items": {
                "type": "string",
                "default":"registry=0xdfd7ed8e098d68d202b48c58f0132e3cc2fe4484;id=0xdfd7ed8e098d68d202b48c58f0132e3cc2fe4484dfd7ed8e098d68d202b48c58",
                "pattern":"^(registry=)(0x)([a-zA-Z0-9]{40})(;id=)(0x)([a-zA-Z0-9]{64})$"
              }
            },
            "accreditationScopes":{
              "description": " Defines the specific accreditation scope that was accredited ",
              "type": "array",
              "minItems":1,
              "items": {
                "type": "object",
                "required":["id"],
                "properties": {
                  "id": {
                    "description": "Identifier for Accreditation area ",
                    "type": "string",
                    "default":"registry=0xc58f0132e3cc2fe4484dfd7ed8e098d68d202b48;id=STE-1",
                    "pattern":"^(registry=)(0x)([a-zA-Z0-9]{40})(;id=)(S)([A-Z]{2})(-)([1-9]{1})([0-9]{0,})$" 
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "type": "object",
  "properties": {
    "credentialSubject":{"$ref": "#/definitions/credentialSubject"}
  }
}
